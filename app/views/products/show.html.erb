<!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__item">
                            <img class="product__details__pic__item--large"
                                src="<%=@product.image%>" alt="">
                        </div>
                        <%# <div class="product__details__pic__slider owl-carousel">
                            <img data-imgbigurl="img/product/details/product-details-2.jpg"
                                src="img/product/details/thumb-1.jpg" alt="">
                            <img data-imgbigurl="img/product/details/product-details-3.jpg"
                                src="img/product/details/thumb-2.jpg" alt="">
                            <img data-imgbigurl="img/product/details/product-details-5.jpg"
                                src="img/product/details/thumb-3.jpg" alt="">
                            <img data-imgbigurl="img/product/details/product-details-4.jpg"
                                src="img/product/details/thumb-4.jpg" alt="">
                        </div> %>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__text">
                        <h3><%=@product.name.capitalize%></h3>
                        <div class="product__details__price"><%=number_to_currency(@product.price, :locale => :id)%></div>
                        <h4><%=@product.region.name%></h4>

                        <%= form_tag add_cart_product_product_path, remote: true do %>
                          <div class="product__details__quantity">
                              <div class="quantity">
                                  <div class="pro-qty">
                                      <input type="text" value="1" id="product_qty" name="product[qty]">
                                  </div>
                              </div>
                          </div>                 
                          <button class="primary-btn">ADD TO CART</button>   
                        <%end%>
                        <ul>
                            <li><b>Availability</b> <span>In Stock</span></li>
                            <li><b>Shipping</b> <span>01 day shipping. <samp>Free pickup today</samp></span></li>
                            <li><b>Weight</b> <span>0.5 kg</span></li>
                        </ul>
                    </div>
                </div>
                 <div class="col-lg-12">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                                    aria-selected="true">Description</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab"
                                    aria-selected="false">Comments</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-1" role="tabpanel">
                                <div class="product__details__tab__desc">
                                    <h6>Products Infomation</h6>
                                    <p><%= @product.description%></p>
                                </div>
                            </div>
                            <div class="tab-pane" id="tabs-2" role="tabpanel">
                                <div class="product__details__tab__desc">
                                    <h6>Comments</h6>
                                      <div class="container mb-5 mt-5">
                                        <div class="card">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <h3 class="text-center mb-5"> Comment section </h3>
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <% @conversations.each do |c|%>
                                                                <div class="media-body">
                                                                    <div class="row">
                                                                        <div class="col-8 d-flex">
                                                                            <h5><%= c.user.name.titleize%></h5> <span>- <%= time_ago_in_words(c.created_at) + ' ago'%></span>
                                                                        </div>
                                                                    </div> 
                                                                    <%= c.content %>
                                                                </div>
                                                            <%end%>
                                                        </div>
                                                    </div>
                                                    <div class="bg-light p-2">
                                                    <%= form_tag create_comment_product_path, remote: true do %>

                                                        <div class="content">
                                                            <input type="text" class="form-control ml-1 shadow-none textarea" id="content_message" name="content[message]"></input>
                                                        </div>                 
                                                        <div class="mt-2 text-right">
                                                            <button class="btn btn-primary btn-sm shadow-none">Post comment</button>
                                                        </div>
                                                        <%end%>
                                                    </div>
                                                    <!-- -->
                                                </div>
                                            </div>
                                        </div>
                                      </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

    <!-- Product Details Section End -->