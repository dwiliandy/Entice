<%= simple_form_for @transaction do |f| %>
    <div class="row">
      <%= f.simple_fields_for :transaction_detail do |p| %>
        <div class="col-lg-8 col-md-6">
            <div class="row">
                <div class="col-lg-12">
                  <%= f.input :recipient_name %>
                </div>
            </div>
            <div class="checkout__input">
                <p>Country<span>*</span></p>
                <input type="text">
            </div>
            <div class="checkout__input">
                <p>Address<span>*</span></p>
                <input type="text" placeholder="Street Address" class="checkout__input__add">
                <input type="text" placeholder="Apartment, suite, unite ect (optinal)">
            </div>
            <div class="checkout__input">
                <p>Town/City<span>*</span></p>
                <input type="text">
            </div>
            <div class="checkout__input">
                <p>Country/State<span>*</span></p>
                <input type="text">
            </div>
            <div class="checkout__input">
                <p>Postcode / ZIP<span>*</span></p>
                <input type="text">
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Phone<span>*</span></p>
                        <input type="text">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Email<span>*</span></p>
                        <input type="text">
                    </div>
                </div>
            </div>
            <div class="checkout__input">
              <%= f.input :note, label: 'Order Notes', placeholder: "Notes about your order, e.g. special notes for delivery.s" %>
            </div>
        </div>
      <%end%>
        <div class="col-lg-4 col-md-6">
            <div class="checkout__order">
                <h4>Your Order</h4>
                <div class="checkout__order__products">Products <span>Total</span></div>
                  <ul>
                  <%@transaction.cart.cart_products.each do |product|%>
                    <li><%=product.product.name.capitalize%><span><%=number_to_currency(product.quantity * product.product.price , :locale => :id)%></span></li>
                  <%end%>
                  </ul>
                  <div class="postal_fee">Postal Fee <span><%=number_to_currency(@transaction.postal_fee.price, :locale => :id)%></span></div>
                <div class="checkout__order__subtotal">Subtotal <span><%=number_to_currency(@transaction.total_price, :locale => :id)%></span></div>
                  
                <div class="checkout__input__checkbox">
                <button type="submit" class="site-btn">PLACE ORDER</button>
            </div>
        </div>
    </div>
<%end%>