<%=render 'pages/menu'%>
<!-- Featured Section Begin -->
  <section class="featured spad">
    <div class="container">

      <div class="col-lg-12 col-md-12">
                    <div class="latest-product__text">
                        <h4>Ready Today</h4>
                        <div class="latest-product__slider owl-carousel">
                          <%@products.each do |product|%>
                              <div class="latest-prdouct__slider__item">
                                  <a href="<%= product_path(product)%>" class="latest-product__item">
                                      <div class="latest-product__item__pic">
                                          <img src=<%= product.image.thumb %> alt="">
                                      </div>
                                      <div class="latest-product__item__text">
                                          <h6><%= product.name %></h6>
                                          <span><%=number_to_currency(product.price, locale: :id)%></span>
                                      </div>
                                  </a>
                              </div>
                            <%end%>
                        </div>
                    </div>
                </div>


      <div class="row featured__filter">
        <%@products.each do |product|%>
          <div class="col-lg-2 col-md-4 col-sm-6">
            <div class="featured__item">
              <%if product.image.present?%>
                <div class="featured__item__pic set-bg" data-setbg="<%= product.image.thumb %>">
              <%else%>
                <div class="featured__item__pic set-bg" data-setbg="<%= asset_url('no_image.jpeg') %>">
              <%end%>
                <ul class="featured__item__pic__hover">
                  <li><%= link_to add_cart_product_product_path(product), method: :post do%>
                    <i class="fa fa-shopping-cart"></i> 
                  <%end%>
                  </li>
                </ul>
              </div>
              <div class="featured__item__text">
                <h6><%= link_to product.name.capitalize, product_path(product.id)%></h6>
                <h6><%=product.region.name%></h6>
                <h5><%=number_to_currency(product.price, locale: :id)%></h5>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </section>