<!-- Hero Section Begin -->
<section class="hero">
  <div class="container">
    <div class="row">
    <div class="col-lg-3">
 
      </div>
      <div class="col-lg-9">
        <div class="hero__search">
          <div class="hero__search__form">
           <%= search_form_for @q, url: root_url do |f| %> 
           <div class="hero__search__categories">
            <%= f.select :region_id_eq, options_from_collection_for_select(Region.all, "id", "name"), :include_blank => true %>
            <span class="arrow_carrot-down"></span>
           </div>
              <%= f.search_field :name_cont, class: 'form-control' %>
              <%= f.button :Search, class: 'site-btn'%>     
          <%end%>
          </div>
        </div>
        
        
      </div>
    </div>
  </div>
</section>
<!-- Hero Section End -->