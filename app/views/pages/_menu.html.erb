<!-- Hero Section Begin -->
<section class="hero">
  <div class="container">
    <%= search_form_for @q, url: root_url do |f| %> 
    <div class="row">
    <div class="col-3">
      <%= f.select :region_id_eq, options_from_collection_for_select(Region.all, "id", "name"), prompt: 'All Region'%>
    </div>
      <div class="col-9">
        <div class="hero__search">
            <div class="row">
              <div class="col-6">
                <%= f.search_field :name_cont, class: 'form-control' %>
              </div>
              <div class="col-3">
                <%= f.button :Search, class: 'site-btn'%>     
              </div>
            </div>
          </div>
        </div>
        
        
      </div>
    </div>
    <%end%>
  </div>
</section>
<!-- Hero Section End -->