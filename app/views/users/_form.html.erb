<div class="container">
	<div class="row">
    <div class="col-lg-6 col-md-6">
			<%= simple_form_for(user, url: users_path, html: { method: :put }) do |f| %>	  
        <br>
			    <%= f.input :name %>
			    <%= f.input :email %>
				  <%= f.input :phone_number %>
				  <%= f.input :address %>
				</br>
				<%= f.button :submit, 'Update', class: "btn btn-info" %>
				<%= link_to "Cancel", root_path, class: "btn btn-danger" %>
			<% end %>
		</div>
	</div>
</div>
