<div class="container">
	<div class="row">
    <div class="col-lg-6 col-md-6">
			<%= simple_form_for [@user] do |f| %>			  
        <br>
			    <%= f.input :name %>
			    <%= f.input :email %>
				  <%= f.input :phone_number %>
			    <%= f.input :password %>
				  <%= f.input :password_confirmation %>
				  <%= f.input :address %>
				</br>
				<%= f.button :submit, class: "btn btn-info" %>
				<%= link_to "Cancel", profile_path, class: "btn btn-danger" %>
			<% end %>
		</div>
	</div>
</div>
