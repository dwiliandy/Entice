<!-- Humberger Begin -->
<div class="humberger__menu__overlay"></div>
<div class="humberger__menu__wrapper">
  <div class="humberger__menu__cart">
    <% if user_signed_in? && current_user.customer? %>
      <ul>
        <li><a href="<%= orders_path%>"><i class="fas fa-receipt"></i></a></li>
        <li><a href="<%=cart_products_path%>"><i class="fa fa-shopping-bag"></i>
            <span>
              <%if current_user.carts.where(active:true).exists?%>
                <%=current_user.carts.where(active:true).last.cart_products.count%>
              <%else%>
                0
              <%end%>
              0
            </span></a></li>
      </ul>
    <%end%>
  </div>
  <div class="humberger__menu__widget">
    <div class="header__top__right__auth">
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fas fa-sign-out-alt text-danger"></i> Logout
        <% end %>
      <% else %>
        <%= link_to new_user_session_path do %>
          <i class="fa fa-user"></i> Login
        <% end %>
      <% end %>
    </div>
  </div>
  <nav class="humberger__menu__nav mobile-menu">
    <ul class="nav">
      <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
      <li class="<%= 'active' if current_page?(cart_products_path) %>"><%= link_to "Shopping Cart", cart_products_path %></li>
      <li class="<%= 'active' if current_page?(orders_path) %>"><%= link_to "Order History", orders_path %></li>
    </ul>
  </nav>
  <div id="mobile-menu-wrap"></div>
</div>
<!-- Humberger End -->
<!-- Header Section Begin -->
<header class="header">
  <div class="header__top">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6 col-md-6">
          <div class="header__top__left">
            <ul class="nav">
              <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
              <%if current_user.present?%>
                <li class="<%= 'active' if current_page?(cart_products_path) %>"><%= link_to "Shopping Cart", cart_products_path %></li>
                <li class="<%= 'active' if current_page?(orders_path) %>"><%= link_to "Order History", orders_path %></li>
              <%end%>
              <li class="<%= 'active' if current_page?(about_path) %>"><%= link_to "About", about_path %></li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6 col-md-6">
          <div class="header__top__right">
            <ul class="nav">
              <%if current_user.present?%>
                <li><%=number_to_currency(current_user.wallet.nominal, :locale => :id)%></li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%=current_user.name.capitalize%>
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="<%=new_wallet_status_path%>">
                      <i class="fas fa-plus fa-sm fa-fw mr-2 text-gray-400"></i>
                        Top Up
                    </a>
                    <a class="dropdown-item" href="<%=wallet_statuses_path%>">
                      <i class="fas fa-history fa-sm fa-fw mr-2 text-gray-400"></i>
                      Top Up History
                    </a>
                    <a class="dropdown-item" href="<%=profile_users_path%>">
                      <i class="fas fa-user-edit fa-sm fa-fw mr-2 text-gray-400"></i>
                      Edit Profile
                    </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                        Logout
                    </a>
                  </div>
                </li>
              <%else%>
              <li>
                <%= link_to new_user_session_path do %>
                  <i class="fa fa-user"></i> Login
                <% end %>
              </li>
                 
              <%end%>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="humberger__open">
      <i class="fa fa-bars"></i>
    </div>
  </div>
</header>
