<div id="content-wrapper" class="d-flex flex-column">
  <!-- Main Content -->
  <div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Product Data</h6>
        </div>
          <div>
            <%= link_to 'Add New Product', new_admins_product_path, class: "btn btn-sm btn-success float-right", style: "color:white"%>
          </div>
          <div class="table-responsive">
          
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th class="th-sm">Name</th>
                  <th class="th-sm">Price</th>
                  <th class="th-sm">Stock</th>
                  <th class="th-sm">Region</th>
                  <th class="th-sm">Image</th>
                  <th class="th-sm">Check Comment</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th class="th-sm">Name</th>
                  <th class="th-sm">Price</th>
                  <th class="th-sm">Stock</th>
                  <th class="th-sm">Region</th>
                  <th class="th-sm">Image</th>
                  <th class="th-sm">Check Comment</th>
                </tr>
              </tfoot>
              <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td><%= link_to product.name.titleize, edit_admins_product_path(product)%></td>
                  <td><%= number_to_currency(product.price, :locale => :id) %></td>
                  <td><%= product.stock %></td>
                  <td><%= product.region.name.titleize %></td>
                  <td><img src=<%= product.image.thumb %> alt=""></td>
                  <td><%= link_to "Check Comment", admins_product_path(product) %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
