<div class="alert alert-info"><%= notice %></div>

<div class="container">
	<div class="row">
        <div class="col-lg-6 col-md-6">
			<p>
			  <strong>Name:</strong>
			  <%= @product.name %>
			</p>
			<p>
			  <strong>Price:</strong>
			  <%= @product.price %>
			</p>
			<p>
			  <strong>Stock:</strong>
			  <%= @product.stock %>
			</p>
			<p>
			  <strong>Region:</strong>
			  <%= @product.region.name %>
			</p>
			<%= link_to 'Edit', edit_admins_product_path(@product), class: 'btn btn-sm btn-success' %> |
			<%= link_to 'Back', admins_products_path, class: 'btn btn-sm btn-danger' %>
		</div>
	</div>
</div>
