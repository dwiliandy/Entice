<div class="container">
  <h1><%=params[:action].capitalize%> Postal Fee</h1>
  <div class="row">
    <div class="col-12">
      <%= simple_form_for [:admins, @postal_fee] do |f| %>
        <div class="row">
          <div class="col-6">
            <%= f.input :name %>
          </div>
          <div class="col-6">
            <%= f.input :price %>
          </div>
          
        </div>
          <%= f.button :submit, class: "btn btn-info" %>

          <%= link_to "Cancel", admins_postal_fees_path, class: "btn btn-danger" %>

      <% end %>
    </div>
  </div>
</div>
