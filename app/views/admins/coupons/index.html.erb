<div class="alert alert-info"><%= notice %></div>
<h1>Postal Fee</h1>
<table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">Name</th>
      <th class="th-sm">Discount</th>
      <th class="th-sm">Quantity</th>
      <th class="th-sm">Status</th>
      <th class="th-sm"><%= link_to 'Add New Product', new_admins_product_path, class: "btn btn-sm btn-success", style: "color:white"%></th>
    </tr>
  </thead>
  <tbody>
    <% @coupon.each do |coupon| %>
      <tr>
        <td><%= link_to coupon.name, edit_admins_coupon_path(coupon)%></td>
        <td><%= number_to_currency(coupon.discount, unit: "Rp", delimiter: ".", separator: ",") %></td>
        <td><%= coupon.qty %></td>
        <td><%= coupon.disabled %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>

<script>
$(document).ready(function () {
$('#dtBasicExample').DataTable();
$('.dataTables_length').addClass('bs-select');
});
</script>
